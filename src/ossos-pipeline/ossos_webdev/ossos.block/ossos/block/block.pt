<?xml version="1.0" charset="UTF-8"?>
<!DOCTYPE html>
<html>
  <head>
  	<!-- No indexing by search engines, for now -->
  <meta http-equiv="Content-Type" name="robots" content="noindex; text/html; charset=utf-8" />
  <title>OSSOS: Block Inspection</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
  <style type = "text/css">
    .triplet-image {font-weight: bold;}
  </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="page-header">
        <h1>OSSOS <small>Outer Solar System Origins Survey</small></h1>
        <ul class="breadcrumb">
          <li><a href="/">Overview</a> <span class="divider">/</span></li>
          <li class="active">${blockID}</li>
        </ul>
      </div><!--page-header-->

      <h2>block ${blockID} <small>${num_fields} fields, centred (${radec[0]}, ${radec[1]}&deg;${radec[2]}) <i>b</i>=${'%.1f' % ec_lat[0]}-${'%.1f' % ec_lat[1]}&deg;</small></h2>

      <div class="well well-small">
        <dl class="dl-horizontal">
          <dt>Observations:</dt>
          <dd>${totalObs}</dd>
          <dt>Precoveries:</dt>
          <dd>${precoveries}</dd>
          <dt>Nailings:</dt>
          <dd>${nailings}</dd>
          <dt>Doubles:</dt>
          <dd>${doubles}</dd>
        </dl>
      </div> <!-- well -->

      <h2>Fields with discovery triplets</h2>
      <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
              <th>Field</th>
              <th colspan="7">Triplet</th>
            </tr>
            <tr>
              <td></td>
              <th colspan="2">1</th>
              <th colspan="2">2</th>
              <th colspan="2">3</th>
              <th>overall</th>
            </tr>
            <tr>
              <td></td>
              <th>date, time</th>
              <th>IQ</th>
              <th>time</th>
              <th>IQ</th>
              <th>time</th>
              <th>IQ</th>
              <th>Worst IQ of triplet</th>
            </tr>
        </thead>
        <tbody>
          <tal:block tal:repeat="obj observedFields">
            <tr>
              <td class="fieldId">
                <a href="fields/${obj['fieldId']}">${obj['fieldId']}</a>
              </td> 
              <tal:block tal:condition="obj['triplet']">
                <td>${obj['triplet'][0][4].strftime('%Y-%m-%d %H:%M:%S')}</td> 
                <td>${'%.2f' % obj['triplet'][0][5]}</td>
                <td>${obj['triplet'][1][4].strftime('%H:%M:%S')}</td>
                <td>${'%.2f' % obj['triplet'][1][5]}</td>
                <td>${obj['triplet'][2][4].strftime('%H:%M:%S')}</td>
                <td>${'%.2f' % obj['triplet'][2][5]}</td>
                <td align=center>${'%.2f' % obj['worstIQ']}</td>
              </tal:block>
              <td tal:condition="not(obj['triplet'])" colspan="7">
                &mdash;
              </td>
            </tr>
          </tal:block>
        </tbody>
      </table>

    
    </div><!--container-fluid-->
  </body>
</html>
