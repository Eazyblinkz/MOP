<?xml version="1.0" charset="UTF-8"?>
<!DOCTYPE html>
<html>
  <head>
  	<!-- No indexing by search engines, for now -->
  <meta http-equiv="Content-Type" name="robots" content="noindex; text/html; charset=utf-8" />
  <title>OSSOS: Field Inspection</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
  <style type = "text/css">
    .normal-image {}
  </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="page-header">
        <h1>OSSOS <small>Outer Solar System Origins Survey</small></h1>
        <ul class="breadcrumb">
          <li><a href="/">Overview</a> <span class="divider">/</span></li>
          <li><a href=""></a>
          <span class="divider">/</span></li>
          <li class="active">${fieldId}</li>
        </ul>
      </div><!--page-header-->

      <h2>field ${fieldId} <small>(${ra[0]}&#688;${ra[1]}&#x1D50;, ${dec[0]}&deg;${dec[1]}) <i>b</i>=${'%.1f' % ec_loc[0]}&deg;</small></h2>

      <div class="well well-small">
        <div class="span6" role="region">
          <dl class="dl-horizontal">
            <dt>Observations:</dt>
            <dd>${totalObs}</dd>
            <dt>Precoveries:</dt>
            <dd>${precoveries}</dd>
            <dt>Nailings:</dt>
            <dd>${nailings}</dd>
            <dt>Doubles:</dt>
            <dd>${doubles}</dd>
          </dl>
        </div>
        <div class="span6" role="region">
          <dl class="dl-horizontal">
            <dt>Processing status: </dt>
            <dd><span>
            </span>
            </dd>
          </dl>    
          <div class="control-group">
            <div class="controls">
              <button type="submit" class="btn" name="reprocess">Reprocess</button>
            </div> <!-- controls -->
          </div> <!-- control-group -->  
        </div>  <!-- row-region -->
        <!--         $("#sparkline").sparkline([1,1,0,1,-1,-1,1,-1,0,0,1,1], {
          type: 'tristate',
          posBarColor: '#007fff',
          negBarColor: '#f04040 ',
          zeroAxis: false});
 -->      
      </div> <!-- well -->

      <table class="table table-striped table-condensed table-hover">
      	<caption colspan="3">
      		Images forming the discovery triplet are <b>highlighted</b>
      	</caption>
      	<thead>
      		<tr>
      			<th>observation endtime</th>
      			<th>IQ</th>
            <th>image ID</th>
            <th>Processing status</th>
      		</tr>
      	</thead>
      	<tbody>
      		<tal:block tal:repeat="obj observations['obs']">
        		<tr tal:condition="discovery_triplet" tal:attributes = "class 'success' if obj[2] in discovery_triplet[0] else 'normal-image'">
      				<tal:block tal:condition="obj">
      					<td>${obj[0].strftime('%Y-%m-%d %H:%M:%S')}</td> 
      					<td>${'%.2f' % obj[1]}</td>
                <td>${obj[2]}</td>
                <td>${obj[3]}</td>
                <td>
                  <div class="control-group">
                    <div class="controls">
                      <button type="submit" class="btn" name="reprocess">Reprocess</button>
                    </div> <!-- controls -->
                  </div> <!-- control-group -->  
                </td>
      				</tal:block>
            <tr tal:condition="not(discovery_triplet)"> <!-- wallpaper has no triplet -->
              <tal:block tal:condition="obj">
                <td>${obj[0].strftime('%Y-%m-%d %H:%M:%S')}</td> 
                <td>${'%.2f' % obj[1]}</td>
                <td>${obj[2]}</td>
                <td>${obj[3]}</td>
              </tal:block>
      				<td tal:condition="not(obj)" colspan="4">  <!-- NEED TO IMPROVE THIS! -->
      					&mdash;
      				</td>
      			</tr>
      		</tal:block>  <!-- tal:repeat obj observations -->
      	</tbody>
      </table>

    </div><!--container-fluid-->
  </body>
</html>

